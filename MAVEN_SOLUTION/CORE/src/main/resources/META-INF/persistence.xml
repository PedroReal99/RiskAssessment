    <class>core.domain.Coverage.Coverage</class>
    <class>core.domain.Insurance.InsuranceObject</class>
    <class>core.domain.Case.CaseI</class>
    <class>core.domain.User.User</class>
    <class>core.domain.Surrounding.Surrounding</class>
    <class>core.domain.Surrounding.SurroundingType</class>
    <class>core.domain.location.GPSLocation</class>
    <class>core.domain.location.Location</class>
    <class>core.domain.location.PostLocation</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:../databases/InsuranceProject"/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
